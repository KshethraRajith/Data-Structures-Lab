//program to implement binary search

#include<stdio.h>

int main()
{
    int num, n, i, l, r, mid, a[100], c = 0, t = 1, s;
    
    printf("Enter the size: ");
    t++;
    scanf("%d", &n);
    t++;
    
    printf("Enter the elements: ");
    t++;
    for(i = 0; i < n; i++)
    {
        t++;
        scanf("%d", &a[i]);
        t++;
    }
    
    printf("Enter the number to be searched: ");
    t++;
    scanf("%d", &num);
    t++;
    
    l = 0;
    t++;
    r = n - 1;
    t++;
    
    while(l <= r)
    {
        t++;
        mid = (l + r) / 2;
        t++;
        if(num == a[mid])
        {
            t++;
            c = 1;
            t++;
            break;
        }
        else if(num > a[mid])
        {
            t++;
            l = mid + 1;
            t++;
        }
        else // num < a[mid]
        {
            t++;
            r = mid - 1;
            t++;
        }
    }
    
    if(c == 0)
    {
        t++;
        printf("Number not found\n");
        t++;
    }
    else
    {
        t++;
        printf("%d found at position %d\n", num, mid + 1);
        t++;
    }
    
    s = (8 * 4) + (n * 4);
    t += 4;
    
    printf("Time complexity (approx step count) is %d\n", t);
    printf("Space complexity (in bytes) is %d\n", s);
    
    return 0;
}
