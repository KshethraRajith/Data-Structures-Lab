// Program to perform push and pop operation in stack using stack
#include <stdio.h>
#define N 5
int top=-1, stack[N];
void push(void)
{
    int item, i;
    if(top==N-1)
        printf("Overflow\n");
    else
    {
        printf("Enter the new element: ");
        scanf("%d",&item);
        top++;
        stack[top]=item;
    }

    printf("The updated stack is: ");
    for(i=0; i<=top; i++)
    {
        printf("%d \t",stack[i]);
    }
}

void pop(void)
{
    int item;
    if(top==-1)
        printf("Underflow");
    else
    {
        item=stack[top];
        top--;
        printf("The element is: %d",item);
    }
}

void display(void)
{
    int i;
    if(top==-1)
    {
        printf("The stack is empty.");
    }
    else
    {
        for(i=0; i<=top; i++)
        {
            printf("%d ",stack[i]);
        }
    }
}

int main()
{
    int choice;
    do
    {
        printf("\n\nChoose the desired option\n(1)PUSH\n(2)POP\n(3)DISPLAY\n(4)EXIT\n");
        scanf("%d",&choice);

        switch(choice)
        {
            case 1:
                push();
                break;
            case 2:
                pop();
                break;
            case 3:
                display();
                break;
            case 4:
                break;
            default:
                printf("Invalid Choice");
                break;
        }
    }
    while(choice!=4);
    
    return 0;
}
