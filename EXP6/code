// Program to perform queue operation
#include <stdio.h>
#define N 5
int front=-1, rear=-1, queue[N];

void enqueue()
{
    int i;
    if(rear==(N-1))
    {
        printf("\nThe queue is full.");
    }
    else if(front==-1 && rear==-1)
    {
        front=rear=0;
        printf("Enter the new element: ");
        scanf("%d",&queue[rear]);
    }
    else
    {
        rear++;
        printf("Enter the new element: ");
        scanf("%d",&queue[rear]);
        printf("The updated queue is: ");
        for(i=front; i<=rear; i++)
        {
            printf("%d \t",queue[i]);
        }
    }
}

void dequeue()
{
    if(front==-1 && rear==-1)
    {
        printf("\nThe queue is empty.");
    }
    else
    {
        printf("The element is: %d",queue[front]);
        front++;
    }
}

void display()
{
    int i;
    if(front==-1 && rear==-1)
    {
        printf("\nThe queue is empty.");
    }
    else
    {
        printf("The elements in the queue are: ");
        for(i=front; i<=rear; i++)
        {
            printf("%d ",queue[i]);
        }
    }
}

int main()
{
    int choice;
    do
    {
        printf("\n\nChoose the desired option\n(1)ENQUEUE\n(2)DEQUEUE\n(3)DISPLAY\n(4)EXIT\n");
        scanf("%d",&choice);
        switch(choice)
        {
            case 1:
                enqueue();
                break;
            case 2:
                dequeue();
                break;
            case 3:
                display();
                break;
            case 4:
                break;
            default:
                printf("Invalid Choice");
                break;
        }
    }
    while(choice!=4);
    return 0;
}
